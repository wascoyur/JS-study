    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "LiveServ",
            "url": "http://127.0.0.1:5500/index.html",
            "webRoot": "${workspaceFolder}"
        },

        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome",
            "url": "http://glo-course/",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Node.js",
            "program": "${workspaceFolder}/script.js",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },


    ]
}
